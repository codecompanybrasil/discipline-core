{
  "name": "@codecompanybrasil/discipline-core",
  "version": "1.0.1",
  "description": "Pacote de componentes base do Discipline.",
  "keywords": [
    "react",
    "typescript",
    "discipline"
  ],
  "author": "@codecompanybrasil",
  "license": "MIT",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "publishConfig": {
    "@codecompanybrasil:registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codecompanybrasil/discipline-core.git"
  },
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs && npm run copy-files-cjs",
    "build:esm": "tsc && npm run copy-files-esm",
    "clean": "rimraf dist/",
    "copy-files-cjs": "copyfiles -u 1 src/**/*.css dist/cjs",
    "copy-files-esm": "copyfiles -u 1 src/**/*.css dist/esm",
    "lint": "eslint \"{**/*,*}.{js,ts,jsx,tsx}\"",
    "prepare": "npm run clean && npm run build",
    "prepublishOnly": "npm run prettier && npm run lint",
    "prettier": "prettier --write \"{src,tests,example/src}/**/*.{js,ts,jsx,tsx}\"",
    "test": "exit 0"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "peerDependencies": {
    "react": ">=16"
  },
  "devDependencies": {
    "@types/react": "^18.2.21",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "copyfiles": "^2.4.1",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.1",
    "typescript": "^5.1.6"
  }
}
